<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/content/css/main.css" media="screen" title="no title" charset="utf-8">

    <title>C# Code Review</title>
  </head>
  <body>
    <div class="container">
      <header class="section" id="header">
        <h1>Brands stocked at @Model.GetStore().GetName()</h1>
        <form action="/edit/@Model.GetStore().GetId()" method="post">
          <input type="text" name="edit-store">
          <button type="submit" name="button">Edit Store Name</button>
        </form>

      </header>
      <ul>
        @if (Model.GetStore().GetBrands().Count>0)
        {
          @foreach(var item in Model.GetStore().GetBrands())
          {
            <li>@item.GetName()</a><span><a href="/update/@Model.GetStore().GetId()/@item.GetId()"> | REMOVE |</a></li>
          }
        }
        else
        {
          <p>
            This store carries no brands.
          </p>
        }
      </ul>
      <a href="/">Home</a>
    </div>
  </body>
